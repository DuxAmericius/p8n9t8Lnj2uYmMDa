<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/help04_editaccount"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6CA0D7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Edit Account Info:"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Go to Home page"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Press &quot;Account&quot;"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
				
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Edit desired information"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
				
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*IMPORTANT* ENTER YOUR ZIPCODE TO SEE ITEMS IN THE SAME ZIPCODE ON THE LOCAL SALES FRAGMENT"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
				
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Click &quot;Save&quot; to save data and close activity"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
				
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. OR click &quot;Cancel&quot; to not save data and close activity"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>